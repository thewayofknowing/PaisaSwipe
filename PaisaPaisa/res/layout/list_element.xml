<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_view_height"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/app_icon__dimension"
        android:layout_height="@dimen/app_icon__dimension"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#2F2F2F"
        android:text="@string/app_name" />
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_height"
        android:paddingLeft="7dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:contentDescription="off" />

</RelativeLayout>
