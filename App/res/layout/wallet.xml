<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:text="My Wallet"
            android:textColor="#2E64FE"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#eee"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/TotA"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:text="Total Amount"
                android:textColor="#999" />

            <LinearLayout
                android:id="@+id/bordercontrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/TotA"
                android:background="@drawable/border"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:text="750"
                    android:textColor="#DF0101"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/RupSign"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/TotA"
                android:gravity="left|center_vertical"
                android:paddingLeft="7dp"
                android:text="â‚¹"
                android:textColor="#555"
                android:textSize="30sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Hist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="Check history details"
            android:textColor="#2E64FE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Share_it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/processed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5ba3d9"
            android:padding="10dp"
            android:text="Your recent request for Mobile Recharge of Rs.200 has been processed"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="Share your happiness with your friends"
                android:textAlignment="gravity"
                android:textColor="#5ba3d9"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/im_fb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/im_tw"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tw" />

            <ImageView
                android:id="@+id/im_gplus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/gplus" />

            <ImageView
                android:id="@+id/im_lin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/lin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#5ba3d9" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/utilize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="You can utilize this money for"
            android:textColor="#898989"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/Money_Loc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/spacer"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/spacer"
                android:background="#90c854"
                android:gravity="center"
                android:padding="8dp"
                android:text="Mobile Recharge"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:layout_toRightOf="@id/spacer"
                android:background="#90c854"
                android:gravity="center"
                android:padding="8dp"
                android:text="Bank Account Transfer"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/AccN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Account Name"
                android:textAlignment="gravity"
                android:textColor="#898989"
                android:textSize="15sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/IAccN"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="12"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/AccNu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Account Number"
                android:textAlignment="gravity"
                android:textColor="#898989"
                android:textSize="15sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/IAccNu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="12"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/IFSC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="IFSC Code"
                android:textAlignment="gravity"
                android:textColor="#898989"
                android:textSize="15sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/IIFSC"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="12"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/Amt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Amount"
                android:textAlignment="gravity"
                android:textColor="#898989"
                android:textSize="15sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/IAmt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="12"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="#90c854"
            android:text="Submit"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout> <!-- </ScrollView> -->